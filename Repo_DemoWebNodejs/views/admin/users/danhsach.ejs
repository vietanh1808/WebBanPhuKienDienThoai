<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
   
         <% include ../playout/menu.ejs %>


    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row">
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Danh Sách Người Dùng</h1>
                    </div>
                    <div class="pull-right hidden-xs">
                       
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">All User</h2>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <% if(success_msg != ''){ %> 
                                <div class="alert alert-success"><%= success_msg%></div>
                           <% } %>
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Họ Tên</th>
                                            <th>Hình Ảnh</th>
                                            <th>Tài Khoản</th>
                                            <th>Mật khẩu</th>
                                            <th>Quyền Truy Cập</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var stt = 0 %>
                                        <% users.forEach(function(item){ stt ++ %>
                                        <tr>
                                            <td><%= stt %></td>
                                            <td><%= item.fullname %></td>
                                            <td> <img src="upload/<%= item.img%>" width="100px" alt=""></td>

                                            <td><%= item.email %></td>
                                            <td><%= item.password %></td>
                                            <td><%= item.role %></td>
                                            <td>
                                                <a href="/admin/users/<%= item._id %>/xoa-user.html">Xoá</a> | 
                                                <a href="/admin/users/<%= item._id %>/sua-user.html">Sửa</a>
                                            </td>
                                        </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                                <!-- ********************************************** -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
